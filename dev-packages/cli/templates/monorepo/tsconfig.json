{
  "extends": "./configs/base.tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@app/welcome": [
        "packages/welcome/src/common"
      ],
      "@app/welcome/lib/*": [
        "packages/welcome/src/*"
      ]
    }
  },
  "include": [
    "dev-packages/*/src",
    "packages/*/src",
    "examples/*/test"
  ]
}
