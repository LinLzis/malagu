{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Malagu Debug",
            "request": "launch",
            "runtimeArgs": [
                "malagu",
                "serve"
            ],
            "runtimeExecutable": "npx",
            "cwd": "${workspaceFolder}/app",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "type": "pwa-node"
        }
    ]
}